---
import Layout from "../../components/layout.astro";

const posts = await Astro.glob("./posts/*.md");
console.log(posts.map((post) => post.url));
---

<Layout
  pageTitle="Blog de desarrollo"
  pageDescription="tutorial para desarrollo y programacion astro"
>
  <h1>Blog</h1>

  {
    posts.map((post) => {
      return <a href={post.url} class="link">{post.frontmatter.title}</a>;
    })
  }

<style>
    .link {
        background: wheat;
        color: black;
        text-decoration: none;
        display: block;
        margin-bottom: 4px;
    }
</style>

</Layout>
